
  <%= render 'bookmarks/form' %>
 
<div class="row">
	<div class="col s3">
	  <div class="card-panel">
	<h5><i>Your Lists</i></h5>
<%= link_to 'Latest', "/bookmarks/today" %>
<% @lists.each do |list| %>
<div class="card-content white-text">
<p><%= link_to list.name, "/lists/#{list.id}" %></p>
</div>
 <% end %>

	</div>
</div>

	<div class="col s9">
		<% @bookmarks.each do |bookmark| %>

	<a href="<%= bookmark.url %>" target="_blank">
<div class="card">
<div class="card-image">
  <img src="<%= bookmark.image %>">
  <span class="card-title #000000 black"><%= bookmark.title %></span>
</div>
<div class="card-content">
  <p><%= bookmark.summary %></p>
</div>
<div class="card-action">
  <a href="<%= bookmark.url %>" target="_blank">Posted by: <%= bookmark.user.first_Name %> at <i><%= bookmark.created_at.strftime("%I:%M%p %d %b %Y") %></a></i></a><i><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure you want to delete #{bookmark.title}"} %></i>
  <div class="card-content">
  <p><%= bookmark.description %></p>
</div>
 

</div>
</div>
<% end %>
</div>
</div>
</div>
</div>