
  <%= render 'bookmarks/form' %>
<div class="row">
	<div class="col s3">
	  <div class="card-panel blue accent-2">
	<h5><i>Your Lists</i></h5>
<% @lists.each do |list| %>

  <span class="#c2185b-text text-darken-2"><p><%= link_to list.name, "/lists/#{list.id}" %></p></span>
	<% end %>

	</div>
</div>

	<div class="col s9">
		<% @bookmarks.each do |bookmark| %>

	<a href="<%= bookmark.url %>" target="_blank"></a>
<div class="card">
<div class="card-image">
  <img src="<%= bookmark.image %>">
  <span class="card-title #000000 black"><%= bookmark.title %></span>
</div>
<div class="card-content">
  <p><%= bookmark.summary %></p>
</div>
<div class="card-action">
  <a href="<%= bookmark.url %>" target="_blank">Posted by: <%= bookmark.user.first_Name %> at <i><%= bookmark.created_at.strftime("%I:%M%p %d %b %Y") %></a></i>
</div>
</div>

</div><% end %>
</div>
</div>
</div>