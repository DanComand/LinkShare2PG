
  <%= render 'bookmarks/form' %>
<div class="row">
	<div class="col s3">
	<p>Your Lists</p>
<% @lists.each do |list| %>

  <p><%= link_to list.name, "/lists/#{list.id}" %>
	<% end %>
	</div>

	<div class="col s9">
		<% @bookmarks.each do |bookmark| %>

	<a href="<%= bookmark.url %>" target="_blank"></a>
<div class="card">
<div class="card-image">
  <img src="<%= bookmark.image %>">
  <span class="card-title #000000 black"><%= bookmark.title %></span>
</div>
<div class="card-content">
  <p><%= bookmark.summary %></p>
</div>
<div class="card-action">
  <a href="<%= bookmark.url %>" target="_blank">Posted by: <%= bookmark.user.first_Name %> at <i><%= bookmark.created_at.strftime("%I:%M%p %d %b %Y") %></a></i>
</div>
</div>

</div><% end %>
</div>
</div>
</div>