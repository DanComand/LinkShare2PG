

<h1>Create a new list</h1>

<%= form_for List.new do |f| %>

<div class="input-field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<br>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
<% @dailylist.each do |dbookmark| %>

<%= dbookmark.title %>

<% end %>

<div class="row center-align">
<% @lists.each do |list| %>

  <p><%= link_to list.name, "/lists/#{list.id}" %> // <i><%= link_to "Delete", list_path(list), method: :delete, data: {confirm: "Are you sure you want to delete this list?"} %></i></p>
 
<% end %>
</div>