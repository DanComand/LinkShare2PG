
<div class="login-form">

  <h1>Create a new list</h1>

    <%= form_for List.new do |f| %>

    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>

    <% @lists.each do |list| %>


    <p><%= link_to list.name, "/lists/#{list.id}" %></p>

    <% end %>

</div>